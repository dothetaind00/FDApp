<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity.ConfirmDonhangActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_confirm"
        android:background="@color/color_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Xác nhận đơn hàng"
            style="@style/setText_content"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_confirm"
        android:layout_below="@+id/toolbar_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/empty_donhang"
        android:visibility="gone"
        android:layout_centerInParent="true"
        style="@style/setText_content"
        android:text="Không có đơn hàng nào!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>