<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/one"
            android:layout_weight="2"
            app:cardCornerRadius="16dp"
            android:layout_width="0dp"
            android:layout_height="125dp">
            <ImageView
                android:id="@+id/image_product"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:text="Name Product"
                style="@style/setText_title" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:id="@+id/status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="6dp"
                        android:text="Đang chờ xác nhận"
                        android:textAlignment="textStart"
                        style="@style/setText_medium" />
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/confirm_donhang"
                        android:text="Xác nhận"
                        android:textSize="16dp"
                        android:layout_marginTop="6dp"
                        android:textAllCaps="false"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:background="@drawable/shape_layout_button"
                        android:layout_gravity="start|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/cancel_donhang"
                        android:text="Huỷ"
                        android:textSize="16dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="10dp"
                        android:textAllCaps="false"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:background="@drawable/shape_layout_button"
                        android:layout_gravity="end|right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/bac"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:text="Chi Tiết Đơn Hàng"
                    android:textStyle="bold"
                    style="@style/setText_medium"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/ic_expand_more"
                    android:src="@drawable/ic_expand_more"
                    android:layout_weight="1"
                    android:background="#F1F0F0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@+id/table_detail"
            android:visibility="gone"
            android:background="@drawable/shape_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:text="Khách hàng: "
                    style="@style/setText_medium"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/ten_kh"
                    android:layout_marginLeft="16dp"
                    style="@style/setText_medium"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Địa chỉ: "
                    style="@style/setText_medium"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/diachi"
                    style="@style/setText_medium"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Số điện thoại: "
                    style="@style/setText_medium"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/sdt"
                    style="@style/setText_medium"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Số lượng: "
                    style="@style/setText_medium"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/soluong"
                    style="@style/setText_medium"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Giá sản phẩm: "
                    style="@style/setText_medium"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/price"
                    style="@style/setText_medium"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Ngày đặt hàng: "
                    style="@style/setText_medium"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/ngaydat_hd"
                    android:layout_marginLeft="16dp"
                    style="@style/setText_medium"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Ngày giao hàng: "
                    style="@style/setText_medium"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/ngaygiao_hd"
                    android:layout_marginLeft="16dp"
                    style="@style/setText_medium"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Thanh toán: "
                    style="@style/setText_medium"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/thanhtoan"
                    style="@style/setText_medium"
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:layout_marginLeft="16dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <View
                android:background="@color/bac"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
        </TableLayout>
    </LinearLayout>
</LinearLayout>
